<h1>All Products</h1>
<p><a href="/products/new"><%= "Add New Smoothie" %></a></p>
<% @products.each_slice(3) do |three_products| %>
  <div class="row">
    <% three_products.each do |product| %>
      <div class="col-md-4">
        <div class="well">
        <h2><a href="/products/<%= product.id %>"><%= product.name %></a></h2>
        <p><%= product.price %></p>
        <p> <img src="<%= product.image%>"/></p>
        <p><%= product.description %></p>
        <a href="/products/<%= product.id %>">More info</a>
      </div>
    </div>
  <% end %>
  </div>
<% end %>