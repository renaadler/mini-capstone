<h1>Create New Product</h1>
<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_tag "/products", method: "post" do %>
  <div class="form-group">
  Name: <input type="text" class="form-control" value="<%= @product.name %>" name="form_name">
</div>
<div class="form-group">
  Price: <input type="float" class="form-control" value="<%= @product.price %>" name="form_price">
</div>
<div class="form-group">
  Image: <input type="text" class="form-control" name="form_image">
</div>
<div class="form-group">
  Description: <input type="text" class="form-control" value="<%= @product.description %>" name="form_description">
</div>
<div class="form-group"><div>
  Supplier id: <select name="supplier_id">
    <% @suppliers.each do |supplier| %>
      <option value="<%= supplier.id %>"><%= supplier.name %></option>
    <% end %>
  </select>
</div>
  Stock: <input type="text" class="form-control" name="form_stock">
</div>
  <input type="submit" value="Create New Smoothie">
<% end %>