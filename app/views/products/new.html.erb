<h1>Create New Product</h1>

<%= form_tag "/products", method: "post" do %>
  <div class="form-group">
    Name: <input type="text" class="form-control" name="form_name">
  </div>
  <div class="form-group">
    Price: <input type="float" class="form-control" name="form_price">
  </div>
  <div class="form-group">
    Description: <input type="text" class="form-control" name="form_description">
  </div>
  <div class="form-group">
    Stock: <input type="text" class="form-control" name="form_stock">
  </div>
  <input type="submit" value="Create New Smoothie">
<% end %>